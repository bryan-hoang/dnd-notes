{
  "name": "dnd-notes",
  "description": "Notes on my sessions of D&amp;D as a player.",
  "homepage": "https://github.com/bryan-hoang/dnd-notes#readme",
  "bugs": {
    "url": "https://github.com/bryan-hoang/dnd-notes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryan-hoang/dnd-notes.git"
  },
  "license": "ISC",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.(md)": [
      "markdownlint"
    ],
    "*.(json|md)": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "prettier": "2.2.1"
  }
}
